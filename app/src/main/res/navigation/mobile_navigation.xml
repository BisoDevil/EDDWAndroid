<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.innovationcodes.eddw.ui.HomeFragment"
        android:label="@string/title_activity_home"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.innovationcodes.eddw.ui.FavoriteFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.innovationcodes.eddw.ui.NoteFragment"
        android:label="@string/my_notes"
        tools:layout="@layout/fragment_notes" />

    <fragment
        android:id="@+id/navigation_timeLine"
        android:name="com.innovationcodes.eddw.ui.TimelineFragment"
        android:label="@string/my_timeline"
        tools:layout="@layout/fragment_timeline" />
</navigation>
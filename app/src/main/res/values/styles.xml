<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppBlue</item>
        <item name="colorPrimaryDark">@color/colorAppGreen</item>
        <item name="colorAccent">@color/colorAppRed</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <!--        <item name="android:navigationBarColor">@color/colorPrimary</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@style/app_textView</item>
        <item name="android:textViewStyle">@style/app_textView</item>
        <item name="windowActionBar">false</item>
        <item name="buttonStyle">@style/app_button</item>

        <item name="materialButtonStyle">@style/app_button</item>
    </style>

    <style name="app_textView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorAppBlue</item>
        <item name="backgroundTint">@color/colorAppBlue</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
